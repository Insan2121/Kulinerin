<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.mainscreen.checkout.CheckoutActivity"
    android:background="@drawable/background"
    android:gravity="center|top"
    android:orientation="vertical"
    >

    <Toolbar
        android:id="@+id/home_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_left_arrow"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tvTitle"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Payment"
            android:textColor="#FFFFFF" />
    </Toolbar>

    <android.support.v7.widget.CardView
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="20dp">
            <TextView
                android:id="@+id/Rp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp "/>
            <TextView
                android:id="@+id/cardView_payment_detailTagihan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="150.000"
                android:layout_toRightOf="@id/Rp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detail Tagihan"
                android:gravity="right"
                android:layout_alignParentEnd="true"
                android:textColor="@color/colorStart"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:paddingRight="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Metode Pembayaran"/>
            <ImageView
                android:src="@color/colorMain"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:scaleType="fitXY"
                android:paddingRight="199dp"
                android:layout_marginTop="3dp"
                />
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                >
                <ImageView
                    android:id="@+id/ic_credit"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_credit_card"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:alpha=".40"
                    />
                <TextView
                    android:id="@+id/tv_metode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kartu Kredit / Debit "
                    android:gravity="center"
                    android:paddingLeft="60dp"
                    android:paddingTop="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/ic_credit"
                    />
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_chevron_right_black_24dp"
                    android:layout_gravity="right"
                    android:layout_marginLeft="80dp"
                    app:layout_constraintLeft_toRightOf="@id/tv_metode"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />
            </android.support.constraint.ConstraintLayout>

            <ImageView
                android:src="@color/colorMain"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:scaleType="fitXY"

                android:layout_marginTop="8dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_ovo"
                    android:layout_gravity="center"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal">

                       <RelativeLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_marginLeft="20dp"
                           >
                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="Ovo Cash"/>
                           <LinearLayout
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:orientation="horizontal"
                               android:layout_alignParentEnd="true">
                               <TextView
                                   android:id="@+id/tv_Rp"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:text="Rp "
                                   />
                               <TextView
                                   android:id="@+id/price"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:text="15.000"
                                   />
                           </LinearLayout>
                       </RelativeLayout>

                   </LinearLayout>
                    <ImageView
                        android:src="@color/colorMain"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:scaleType="fitXY"
                        android:paddingLeft="20dp"
                        android:layout_marginTop="3dp"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ovo Point"/>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_alignParentEnd="true"
                                >
                                <TextView
                                    android:id="@+id/tv_Rp2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Rp "
                                    />
                                <TextView
                                    android:id="@+id/price2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="15.000"
                                    />
                            </LinearLayout>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
                </LinearLayout>
            <ImageView
                android:src="@color/colorMain"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:scaleType="fitXY"
                android:layout_marginTop="15dp"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>





</LinearLayout>